---
pagination:
  data: collections.libraryTagList
  size: 1
  alias: tag
  addAllPagesToCollections: true
eleventyComputed:
  title: Library - Tagged “{{ tag }}”
permalink: /library/tags/{{ tag | slugify }}/
---

{%- extends "layouts/base.njk" -%}
{%- block styles -%}
  <style>
    {% renderFile "./sass/critical.scss" %}
    {% renderFile "./sass/layouts/blognav.scss" %}
  </style>
{%- endblock -%}
{%- block content -%}
  <h1>{{ title }}</h1>
  <div class="blog-nav">
    {%- set postslist = collections.library -%}
    {%- set class = "bookmark-item" -%}
    <section>
      {%- for post in postslist | reverse -%}
				{%- if post in collections[ tag ] -%}
        	{%- include "postslist.njk" -%}
				{%- endif -%}
      {%- endfor -%}
    </section>
		{%- set type = "library" -%}
		{%- set tagList = collections.libraryTagList -%}
    {%- include "tagslist.njk" -%}
  </div>
{%- endblock -%}