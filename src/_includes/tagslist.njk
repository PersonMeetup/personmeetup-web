<aside class="blog-tagnav">
  <div class="sticky">
    <div>
      {%- set tagUrl -%}/{{ type }}/tags/{%- endset -%}
      <details class="context" {% if tagUrl in page.url -%} open="true" {%- endif -%}>
        <summary class="context-button">Show Tags</summary>
        <div class="context-details">
          <ul>
            {%- for tag in tagList -%}
              {%- set tagUrl -%}/{{ type }}/tags/{{ tag | slugify }}/{%- endset -%}
              <li>
								<!-- Use current page data to check if URL's match -->
                <a class="blog-tag" {% if tagUrl == page.url -%} aria-current="page" href="/blog/" {%- else -%} href="{{ tagUrl | url }}" {%- endif -%}>{{ tag }}</a>
              </li>
            {%- endfor -%}
          </ul>
        </div>
      </details>
      <button class="back-to-top">
        <a href="#main-content">Back to Top</a>
      </button>
    </div>
  </div>
</aside>