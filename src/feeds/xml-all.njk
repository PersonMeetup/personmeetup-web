{% extends "xmlfeed.njk" %}
{% block title %}All{% endblock %}
{% block self %}all.xml{% endblock %}
{% block page %}{% endblock %}
{% block id %}{% endblock %}

{% block subtitle %}Latest Site Updates{% endblock %}

{% block update %}
  {{ collections.archive | rssLastUpdatedDate }}
{% endblock %}
{% block entries %}
  {% for item in collections.archive | reverse %}
    {%- set icon -%}
